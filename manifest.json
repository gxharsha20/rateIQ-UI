{
  "manifest_version": 3,
  "name": "RateIQ",
  "version": "1.0.0",
  "description": "Aggregate product reviews from TikTok, Reddit, and YouTube to make smarter shopping decisions.",
  "permissions": ["contextMenus", "activeTab", "sidePanel"],
  "side_panel": {
    "default_path": "popup.html"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
